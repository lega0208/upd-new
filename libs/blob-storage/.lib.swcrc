{
  "jsc": {
    "target": "es2020",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true
  },
  "module": {
    "type": "es6",
    "strict": true,
    "noInterop": true
  },
  "exclude": [
    "jest.config.js",
    "./src/**/.*.spec.ts$",
    "./**/.*.spec.ts$",
    "./src/**/jest-setup.ts$",
    "./**/jest-setup.ts$",
    "./**/.*.js$"
  ]
}
